{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://lunchbadger.com/schemas/definitions.json",
  "dataSource": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "type": {
        "type": "string"
      },
      "url": {
        "type": "string"
      },
      "schema": {
        "type": "string"
      },
      "username": {
        "type": "string"
      },
      "password": {
        "type": "string"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      }
    },
    "required": ["id", "name", "type"],
    "additionalProperties": false
  },
  "privateEndpoint": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "url": {
        "type": "string"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      }
    },
    "required": ["id", "name", "url"],
    "additionalProperties": false
  },
  "model": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "contextPath": {
        "type": "string"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      },
      "base": {
        "type": "string",
        "default": "Model"
      },
      "plural": {
        "type": "string"
      },
      "readOnly": {
        "type": "boolean",
        "default": false
      },
      "public": {
        "type": "boolean",
        "default": false
      },
      "strict": {
        "type": "boolean",
        "default": false
      },
      "privateModelProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "propertyKey": {
              "type": "string"
            },
            "propertyValue": {
              "type": "string"
            },
            "propertyType": {
              "type": "string"
            },
            "propertyIsRequired": {
              "type": "boolean"
            },
            "propertyIsIndex": {
              "type": "boolean"
            },
            "propertyNotes": {
              "type": "string"
            }
          },
          "required": ["id"]
        }
      },
      "privateModelRelations": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "relationType": {
              "type": "string"
            },
            "relationForeignKey": {
              "type": "string"
            },
            "relationModel": {
              "type": "string"
            }
          },
          "required": ["id"],
          "additionalProperties": false
        }
      }
    },
    "required": ["id", "name", "contextPath", "itemOrder", "base",
                 "readOnly", "public", "strict"],
    "additionalProperties": false
  },
  "api": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      },
      "plans": {
        "type": "array",
        "items": { "$ref": "definitions.json#/plan" }
      },
      "publicEndpoints": {
        "type": "array",
        "items": { "$ref": "definitions.json#/publicEndpoint" }
      }
    },
    "required": ["id", "name", "itemOrder"],
    "additionalProperties": false
  },
  "plan": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "icon": {
        "type": "string"
      },
      "details": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "date": {
              "type": "string"
            },
            "changed": {
              "type": "boolean",
              "default": false
            },
            "subscribers": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "existing": {
                  "type": "number",
                  "default": "0"
                },
                "new": {
                  "type": "number",
                  "default": "0"
                },
                "upgrades": {
                  "type": "number",
                  "default": "0"
                },
                "downgrades": {
                  "type": "number",
                  "default": "0"
                },
                "churn": {
                  "type": "number",
                  "default": "0"
                }
              },
              "required": ["id"],
              "additionalProperties": false
            },
            "parameters": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "callsPerSubscriber": {
                  "type": "number",
                  "default": "0"
                },
                "cashPerCall": {
                  "type": "number",
                  "default": "0"
                }
              },
              "required": ["id"],
              "additionalProperties": false
            }
          },
          "required": ["id", "date", "changed"],
          "additionalProperties": false
        }
      },
      "tiers": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "conditionFrom": {
              "type": "number"
            },
            "conditionTo": {
              "type": "number"
            },
            "type": {
              "type": "string"
            },
            "value": {
              "type": "number"
            },
            "details": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "date": {
                    "type": "string"
                  },
                  "conditionFrom": {
                    "type": "number"
                  },
                  "conditionTo": {
                    "type": "number"
                  },
                  "type": {
                    "type": "string"
                  },
                  "value": {
                    "type": "number"
                  }
                },
                "required": ["id", "date"],
                "additionalProperties": false
              }
            }
          },
          "required": ["id"],
          "additionalProperties": false
        }
      }
    },
    "required": ["id", "name", "icon"],
    "additionalProperties": false
  },
  "publicEndpoint": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "path": {
        "type": "string"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      }
    },
    "required": ["id", "name", "path", "itemOrder"],
    "additionalProperties": false
  },
  "portal": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "rootUrl": {
        "type": "string"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      },
      "apis": {
        "type": "array",
        "items": { "$ref": "definitions.json#/api" }
      }
    },
    "required": ["id", "name", "itemOrder"],
    "additionalProperties": false
  },
  "gateway": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "dnsPrefix": {
        "type": "string",
        "pattern": "^([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9\\-]{0,22}[a-zA-Z0-9])$"
      },
      "itemOrder": {
        "type": "number",
        "default": 0
      },
      "pipelines": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "policies": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  }
                },
                "required": ["id", "name", "type"],
                "additionalProperties": false
              }
            }
          },
          "required": ["id", "name"],
          "additionalProperties": false
        }
      }
    },
    "required": ["id", "name", "dnsPrefix", "itemOrder"],
    "additionalProperties": false
  },
  "connection": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "fromId": {
        "type": "string"
      },
      "toId": {
        "type": "string"
      }
    },
    "required": ["id", "fromId", "toId"],
    "additionalProperties": false
  },
  "state": {
    "type": "object",
    "properties": {
      "key": {
        "type": "string"
      },
      "value": {}
    },
    "required": ["key", "value"],
    "additionalProperties": false
  }
}
